# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================
# This file contains the environment variables needed for Render deployment
# Copy these to your Render environment variables

# ========================================
# DATABASE CONFIGURATION (Required)
# ========================================
DATABASE_URL="YOUR_NEON_POSTGRESQL_CONNECTION_STRING_HERE"
DIRECT_URL="YOUR_NEON_POSTGRESQL_CONNECTION_STRING_HERE"

# ========================================
# JWT & SESSION SECURITY (Required)
# ========================================
JWT_SECRET="GENERATE_SECURE_64_CHAR_SECRET_HERE"
JWT_REFRESH_SECRET="GENERATE_SECURE_64_CHAR_REFRESH_SECRET_HERE"
SESSION_SECRET="GENERATE_SECURE_64_CHAR_SESSION_SECRET_HERE"
CSRF_SECRET="GENERATE_SECURE_64_CHAR_CSRF_SECRET_HERE"

# ========================================
# EMAIL CONFIGURATION (Required for notifications)
# ========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-gmail-address@gmail.com"
SMTP_PASS="your-gmail-app-password-here"
SMTP_FROM="noreply@chainsync.store"
FRONTEND_URL="https://chainsync.store"

# ========================================
# PAYMENT GATEWAY CONFIGURATION
# ========================================
PAYSTACK_SECRET_KEY="sk_live_your_paystack_secret_key_here"
FLUTTERWAVE_SECRET_KEY="FLWSECK_your_flutterwave_secret_key_here"
FLUTTERWAVE_BASE_URL="https://api.flutterwave.com/v3"

# ========================================
# APPLICATION CONFIGURATION
# ========================================
BASE_URL="https://chainsync.store"
NODE_ENV="production"
PORT=10000

# ========================================
# SECURITY CONFIGURATION (Critical for production)
# ========================================
ALLOWED_ORIGINS="https://chainsync.store,https://www.chainsync.store"
PRODUCTION_DOMAIN="https://chainsync.store"
PRODUCTION_WWW_DOMAIN="https://www.chainsync.store"
# DO NOT SET COOKIE_DOMAIN unless you have multiple subdomains
# COOKIE_DOMAIN=".chainsync.store"

# ========================================
# EMAIL VERIFICATION (Recommended for production)
# ========================================
REQUIRE_EMAIL_VERIFICATION=true
VITE_REQUIRE_EMAIL_VERIFICATION="true"

# ========================================
# CAPTCHA CONFIGURATION (Required for production)
# ========================================
VITE_RECAPTCHA_SITE_KEY="6Lc_your_production_recaptcha_site_key_here"
RECAPTCHA_SECRET_KEY="your_production_recaptcha_secret_key_here"
RECAPTCHA_MIN_SCORE="0.5"
ALLOW_INSECURE_PAYMENT_NO_CAPTCHA=false

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
VERIFICATION_LOCKOUT_THRESHOLD=5
VERIFICATION_LOCKOUT_DURATION_MS=900000

# ========================================
# MONITORING & LOGGING
# ========================================
LOG_LEVEL="info"
SENTRY_DSN="https://your_sentry_dsn_here"
ALERT_THRESHOLD_SIGNUP_ATTEMPTS_PER_MINUTE=50
ALERT_THRESHOLD_DUPLICATE_SIGNUPS_PER_MINUTE=5
ALERT_THRESHOLD_CAPTCHA_FAILURES_PER_MINUTE=10
ALERT_THRESHOLD_CSRF_FAILURES_PER_MINUTE=5
ALERT_THRESHOLD_DB_TIMEOUTS_PER_MINUTE=3

# ========================================
# AI & OPENAI CONFIGURATION (Optional)
# ========================================
OPENAI_API_KEY="sk-your_openai_api_key_here"
OPENAI_ORGANIZATION="org-your_openai_org_id_here"
AI_ANALYTICS_ENABLED=true
AI_MODEL_CACHE_TTL=3600

# ========================================
# MAINTENANCE JOBS
# ========================================
CLEANUP_ABANDONED_SIGNUPS=true
CLEANUP_ABANDONED_SIGNUPS_HOUR_UTC=3
