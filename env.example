# Database Configuration (REQUIRED)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Session Security (REQUIRED for production)
SESSION_SECRET="your-super-secret-session-key-here-minimum-64-characters"

# Environment
NODE_ENV="development"

# Port Configuration
PORT=5000

# Base URL for the application (REQUIRED for payment callbacks)
BASE_URL=http://localhost:5000

# OpenAI Configuration (REQUIRED for AI features)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Payment Processing (REQUIRED for payment features)
PAYSTACK_SECRET_KEY="sk_test_your_paystack_secret_key_here"
PAYSTACK_PUBLIC_KEY="pk_test_your_paystack_public_key_here"

FLUTTERWAVE_SECRET_KEY="FLWSECK-your-flutterwave-secret-key-here"
FLUTTERWAVE_ENCRYPTION_KEY="your-flutterwave-encryption-key-here"
FLUTTERWAVE_PUBLIC_KEY="FLWPUBK-your-flutterwave-public-key-here"

# Email Configuration (optional - for password reset)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password-here"

# Security Settings
BCRYPT_SALT_ROUNDS=12
SESSION_TIMEOUT=86400000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# CORS Configuration (optional - defaults to localhost and production domains)
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000,http://localhost:5000,https://chainsync.store,https://www.chainsync.store"

# Advanced Feature Flags
WS_ENABLED=true
AI_ANALYTICS_ENABLED=true
OFFLINE_SYNC_ENABLED=true 